{% extends "AndroidDevAdminBundle::layout.html.twig" %}

{% block title %}Admin - Liste de catégorie - Android-dev{% endblock %}
{% block description %}{% endblock %}

{% block contentDetail %}
<div class="col-md-12"><h1>Liste de catégorie</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
    {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_categorie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.nom }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_categorie_show', { 'id': entity.id }) }}">Voir</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_categorie_edit', { 'id': entity.id }) }}">Modifier</a>
                            </li>
                        </ul>
                    </td>
                </tr>
    {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('admin_categorie_new') }}">
                    Crée une nouvelle catégorie
                </a>
            </li>
        </ul>

    </div>

{% endblock %}