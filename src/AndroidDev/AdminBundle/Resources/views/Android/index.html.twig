{% extends "AndroidDevAdminBundle::layout.html.twig" %}

{% block title %}Admin - Liste d'infoSite - Android-dev{% endblock %}
{% block description %}{% endblock %}

{% block contentDetail %}
<div class="col-md-12"><h1>Android list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Code</th>
            </tr>
        </thead>
        <tbody>
    {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_android_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titre }}</td>
                <td>{{ entity.code }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_android_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_android_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
    {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_android_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>


</div>

{% endblock %}