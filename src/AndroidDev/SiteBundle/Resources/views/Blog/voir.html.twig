{% extends "AndroidDevSiteBundle::layoutArticle.html.twig" %}

{% block title %}{{ article.titre | raw }} | Android-dev.fr{% endblock %}
{% block description %}{{ article.titre | raw }}. {{ article.sousTitre | striptags  }}{% endblock %}
{% block urlCanonical %}http://www.android-dev.fr/{{ article.slug  }}{% endblock %}

{% block enteteContentPC %}
<ul class="breadcrumb">
    <li><a href="{{ path('androiddev_accueil') }}">Accueil</a> <span class="divider">/</span></li>
    <li><a href="{{ path('androiddev_'~article.getType().getNom()|lower) }}">{{ article.getType().getNom() }}</a> <span class="divider">/</span></li>
    {% if article.getType().getNom()|lower ==  'projet' %}
        <li><a href="{{ path('androiddev_'~article.getType().getNom()|lower ~'Voir', {'slug': article.getProjet().getProjet().getSlug() }) }}">{{ article.getProjet().getProjet().getTitre() }}</a> <span class="divider">/</span></li>
   
        {% else %}
        <li><a href="{{ path('androiddev_'~article.getType().getNom()|lower ~'Cat', {'slug': article.getCategorie().getSlug() }) }}">{{ article.getCategorie().getNom() }}</a> <span class="divider">/</span></li>
    {% endif %}  
            <li class="active">{{ article.getTitre() }}</li>
        </ul>
        <div class="hero-unit">
            <h1>{{ article.titre | raw }}</h1>
    {{ article.sousTitre | raw }}
            <!-- AddThis Button BEGIN -->
            <div class="addthis_toolbox addthis_default_style">
                <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                <a class="addthis_button_tweet"></a>
                <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                <a class="addthis_button_linkedin_counter"></a>
                <a class="addthis_counter addthis_pill_style"></a>
            </div>
            <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=undefined"></script>
            <!-- AddThis Button END -->
        </div>
{% endblock %}

{% block contentPC %}
        <div class="contenuArticle">
    {{ article.contenu | raw }}
                <br />
                <p class="text-left muted">
    {% if article.getUpdated() ==  article.getCreated() %}
                        Publié le {{ article.getCreated()|date("d/m/Y") }}
    {% else %}
                        Modifié le {{ article.getUpdated()|date("d/m/Y") }}
    {% endif %}  
                        par {{ article.getAuteur().getUsername() }}
                    </p>
                </div>

                <hr />
                <!-- AddThis Button BEGIN -->
                <div class="addthis_toolbox addthis_default_style addthis_32x32_style">
                    <a class="addthis_button_facebook"></a>
                    <a class="addthis_button_twitter"></a>
                    <a class="addthis_button_google_plusone_share"></a>
                    <a class="addthis_button_linkedin"></a>
                    <a class="addthis_button_viadeo"></a>
                    <a class="addthis_button_compact"></a><a class="addthis_counter addthis_bubble_style"></a>
                </div>
                <script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=undefined"></script>
                <!-- AddThis Button END -->

                <hr />
                <div id="disqus_thread"></div>
                <script type="text/javascript">
                    /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
                    var disqus_shortname = 'androiddev'; // required: replace example with your forum shortname

                    var disqus_identifier = "{{ article.id }}";

                    /* * * DON'T EDIT BELOW THIS LINE * * */
                    (function() {
                        var dsq = document.createElement('script');
                        dsq.type = 'text/javascript';
                        dsq.async = true;
                        dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
                        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                    })();
                    </script>
                    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
                    <a href="http://disqus.com" class="dsq-brlink">blog comments powered by <span class="logo-disqus">Disqus</span></a>
{% endblock %}