{% extends "AndroidDevSiteBundle::layout.html.twig" %}

{% block title %}Accueil - Android-dev{% endblock %}
{% block description %}{% endblock %}

{% block enteteContentPC %}
    {{ infosite['entete'] | raw  }}
{% endblock %}

{% block contentPC %}

{% for article in articles %}
    {% if loop.index is divisibleby(2)  %}
<div class="span6">
    <h2>{{ article.titre | raw }}</h2>
    <p>{{ article.sousTitre | raw }}</p>
    <p><a class="btn" href="">View details &raquo;</a></p>
</div>
</div>
    {% else %}
<div class="row-fluid">
    <div class="span6">
        <h2>{{ article.titre | raw }}</h2>
        <p>{{ article.sousTitre | raw }}</p>
        <p><a class="btn" href="">View details &raquo;</a></p>
    </div>
    {% endif %}
{% endfor %}
    <ul class="pager">
        <li class="previous">
            <a href="{{ page + 1 }}">&larr; Older</a>
        </li>
        <li class="next {% if  page == 1 %}
               disabled
              {% endif %} ">
            <a href="{{ page - 1 }} ">Newer &rarr;</a>
        </li>
    </ul>
{% endblock %}

